<%= form_with model: @article, url: '/articles', local: true do |f| %>
  <div class="form-group">
    <%= f.label :study_time %>
    <%= f.text_field :study_time, class: "form-control", placeholder: "10:00" %>
  </div>
  <div class="form-group">
    <%= f.label :study_field %>
    <%= f.text_area :study_field, class: "form-control", rows: 3, placeholder: "ex)Laravel" %>
  </div>
  <div class="form-group">
    <%= f.label :study_summary %>
    <%= f.text_area :study_summary, class: "form-control", rows: 5, placeholder:"ex)Learned how to introduce gem"%>
  </div>
  <div class="form-group">
    <%= f.label :ITNews_opinion %>
    <%= f.text_area :ITNews_opinion, class: "form-control", rows: 3, placeholder:"Pick up your favorite news and tell us your opinion" %>
  </div>
  <div class="form-group">
    <%= f.label :consultation %>
    <%= f.text_area :consultation, class: "form-control", rows: 3, placeholder:"Tell us what you want to consult" %>
  </div>
  <div class="form-group">
    <%= f.label :sns_links %>
    <%= f.text_field :sns_links, class: "form-control",placeholder:"https://twitter.com" %>
  </div>
  <%= f.submit class: "btn btn-primary btn-lg mb-2" %>
<% end %>